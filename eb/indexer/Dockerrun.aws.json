{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
	{
	    "name": "elasticsearch-data",
	    "host": {
		"sourcePath": "/var/lib/elasticsearch/data"
	    }
	}
    ],
    "containerDefinitions": [
	{
	    "name": "elasticsearch",
	    "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/aws-elasticsearch:0.2.7",
	    "essential": true,
	    "portMappings": [
		{
		    "hostPort": 9201,
		    "containerPort": 9200
		},
		{
		    "hostPort": 9301,
		    "containerPort": 9300
		}
	    ],
	    "mountPoints": [
                {
                    "sourceVolume": "elasticsearch-data",
                    "containerPath": "/usr/share/elasticsearch/data"
                },
		{
		    "sourceVolume": "awseb-logs-elasticsearch",
		    "containerPath": "/usr/share/elasticsearch/logs"
		}
	    ],
            "environment": [
                {
                    "name": "ES_HEAP_SIZE",
                    "value": "2g"
                }
            ],
            "memory": 4096
	},
        {
            "name": "search-indexer",
            "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/search-indexer:0.2.6",
            "essential": true,
	    "links": ["elasticsearch"],
	    "environment": [
		{
		    "name": "ES_BASE_URI",
		    "value": "http://elasticsearch:9200"
		}
	    ],
	    "memory": 10240
        }
    ]
}
