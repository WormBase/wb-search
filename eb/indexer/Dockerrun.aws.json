{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
	{
	    "name": "elasticsearch-data",
	    "host": {
		"sourcePath": "/var/lib/elasticsearch/data"
	    }
	},
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/proxy/conf.d"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "search-web-api",
            "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/search-web-api:0.2.11",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 3006,
                    "containerPort": 3000
                }
            ],
	    "links": ["elasticsearch"],
	    "environment": [
		{
		    "name": "ES_BASE_URI",
		    "value": "http://elasticsearch:9200"
		}
	    ],
	    "memory": 512
        },
	{
	    "name": "elasticsearch",
	    "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/aws-elasticsearch:0.2.11",
	    "essential": true,
	    "portMappings": [
		{
		    "hostPort": 9200,
		    "containerPort": 9200
		},
		{
		    "hostPort": 9300,
		    "containerPort": 9300
		}
	    ],
	    "mountPoints": [
                {
                    "sourceVolume": "elasticsearch-data",
                    "containerPath": "/usr/share/elasticsearch/data"
                },
		{
		    "sourceVolume": "awseb-logs-elasticsearch",
		    "containerPath": "/usr/share/elasticsearch/logs"
		}
	    ],
            "environment": [
                {
                    "name": "ES_HEAP_SIZE",
                    "value": "1g"
                }
            ],
            "memory": 3072
	},
        {
            "name": "search-indexer",
            "image": "357210185381.dkr.ecr.us-east-1.amazonaws.com/wormbase/search-indexer:0.2.11",
            "essential": true,
	    "links": ["elasticsearch"],
	    "environment": [
		{
		    "name": "ES_BASE_URI",
		    "value": "http://elasticsearch:9200"
		},
		{
		    "name": "_JAVA_OPTIONS",
		    "value": "-Xms8000m -Xmx9216m"
		}
	    ],
	    "memory": 10240
        },
        {
            "name": "nginx-proxy",
            "image": "nginx:1.13.7",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "search-web-api"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "awseb-logs-nginx-proxy",
                    "containerPath": "/var/log/nginx"
                },
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                }
            ]
        }
    ]
}
